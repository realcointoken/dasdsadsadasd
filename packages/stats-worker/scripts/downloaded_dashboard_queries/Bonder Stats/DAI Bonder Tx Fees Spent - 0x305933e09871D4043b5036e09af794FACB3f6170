select ethereum_tx_fees as "ethereum (ETH)", optimism_tx_fees as "optimism (ETH)", arbitrum_tx_fees as "arbitrum (ETH)", polygon_tx_fees as "polygon (MATIC)", gnosis_tx_fees as "gnosis (XDAI)", strftime('%m - %d  - %Y', datetime(timestamp, 'unixepoch', 'utc')) as day from bonder_tx_fees where token = 'DAI' AND strftime('%Y-%m-%d', datetime(timestamp, 'unixepoch', 'utc')) >= '2022-01-01'
