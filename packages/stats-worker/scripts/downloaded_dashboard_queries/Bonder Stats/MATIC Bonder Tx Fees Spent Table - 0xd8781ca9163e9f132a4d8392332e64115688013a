select strftime('%m - %d  - %Y', datetime(timestamp, 'unixepoch', 'utc')) as day, ethereum_tx_fees as "ethereum_ETH", optimism_tx_fees as "optimism_ETH", arbitrum_tx_fees as "arbitrum_ETH", polygon_tx_fees as "polygon_MATIC", gnosis_tx_fees as "gnosis_XDAI", total_tx_fees as "total_usd", eth_price_usd, matic_price_usd from bonder_tx_fees where token = 'MATIC' AND strftime('%Y-%m-%d', datetime(timestamp, 'unixepoch', 'utc')) >= '2022-01-01' order by timestamp desc